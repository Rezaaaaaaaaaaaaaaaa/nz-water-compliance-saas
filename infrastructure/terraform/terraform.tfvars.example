# Terraform Variables - Production Example
# Copy this file to terraform.tfvars and update with your values

# Project Configuration
project_name = "compliance-saas"
environment  = "production"
aws_region   = "ap-southeast-2"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-southeast-2a", "ap-southeast-2b", "ap-southeast-2c"]

# Database Configuration
db_instance_class        = "db.t3.medium"
db_allocated_storage     = 100
db_master_username       = "postgres"
db_master_password       = "CHANGE_ME_STRONG_PASSWORD"  # Use AWS Secrets Manager in production
db_backup_retention_days = 30
db_multi_az              = true

# Redis Configuration
redis_node_type       = "cache.t3.small"
redis_num_cache_nodes = 2
redis_auth_token      = "CHANGE_ME_STRONG_TOKEN"  # Use AWS Secrets Manager in production

# ECS Configuration
ecs_task_cpu          = "512"
ecs_task_memory       = "1024"
ecs_desired_count     = 2
ecs_image_tag         = "latest"
ecs_enable_autoscaling = true
ecs_autoscaling_min   = 1
ecs_autoscaling_max   = 10

# ALB Configuration
enable_https       = true
certificate_arn    = "arn:aws:acm:ap-southeast-2:ACCOUNT_ID:certificate/CERTIFICATE_ID"
domain_name        = "compliance.example.co.nz"

# Monitoring Configuration
alert_email_addresses = ["admin@example.co.nz", "ops@example.co.nz"]
log_retention_days    = 30

# Application Configuration
from_email_address = "noreply@compliance.example.co.nz"

# Tags
tags = {
  Project     = "NZ Water Compliance SaaS"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "Operations Team"
  CostCenter  = "Engineering"
  Compliance  = "Taumata Arowai"
}
